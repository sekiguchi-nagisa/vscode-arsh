{
    "name": "vscode-ydsh",
    "displayName": "vscode-ydsh",
    "description": "vscode extension for ydsh",
    "version": "0.5.1",
    "license": "Apache-2.0",
    "homepage": "https://github.com/sekiguchi-nagisa/vscode-ydsh/blob/master/README.md",
    "engines": {
        "vscode": "^1.63.1"
    },
    "categories": [
        "Programming Languages"
    ],
    "publisher": "nagisa-sekiguchi",
    "repository": {
        "type": "git",
        "url": "https://github.com/sekiguchi-nagisa/vscode-ydsh.git"
    },
    "main": "./out/extension.js",
    "activationEvents": [
        "onLanguage:ydsh"
    ],
    "contributes": {
        "languages": [
            {
                "id": "ydsh",
                "aliases": [
                    "ydsh",
                    "ds"
                ],
                "extensions": [
                    "ds"
                ],
                "firstLine": "^#!/usr/bin/env +ydsh\\b",
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "ydsh",
                "scopeName": "source.ydsh",
                "path": "./syntaxes/ydsh.tmLanguage.json"
            }
        ],
        "semanticTokenScopes": [
            {
                "language": "ydsh",
                "scopes": {
                    "variable": ["variable.other.ydsh"]
                }
            }
        ],
        "configuration": {
            "title": "ydshd",
            "properties": {
                "ydshd.executablePath": {
                    "type": "string",
                    "default": "ydshd",
                    "description": "executable path of ydshd. default is ydshd"
                },
                "ydshd.logLevel": {
                    "type": "string",
                    "default": "warning",
                    "enum": [
                        "debug",
                        "info",
                        "warning",
                        "error",
                        "fatal"
                    ],
                    "description": "analyzer log level setting"
                },
                "ydshd.commandCompletion": {
                    "type": "string",
                    "default": "default",
                    "enum": [
                        "disabled",
                        "default",
                        "all"
                    ],
                    "enumDescriptions": [
                        "disable command completion",
                        "only complete builtin/user-defined commands",
                        "complete arbitrary commands"
                    ],
                    "description": "command completion setting"
                },
                "ydshd.commandArgumentCompletionEnabled": {
                    "type": "boolean",
                    "default": false,
                    "description": "enable command argument (file path) completion"
                },
                "ydshd.semanticHighlightEnabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "enable semantic highlight (server side syntax highlight)"
                }
            }
        },
        "configurationDefaults": {
            "[ydsh]": {
                "editor.semanticHighlighting.enabled": true
            }
        }
    },
    "devDependencies": {
        "@types/mocha": "^8.2.2",
        "@types/node": "^12.20.37",
        "@types/vscode": "^1.63.1",
        "@typescript-eslint/eslint-plugin": "^4.33.0",
        "@typescript-eslint/parser": "^4.33.0",
        "eslint": "^7.23.0",
        "mocha": "^9.1.4",
        "typescript": "^4.5.4",
        "vsce": "^2.6.5",
        "vscode-test": "^1.3.0"
    },
    "dependencies": {
        "vscode-languageclient": "^7.0.0"
    },
    "private": true,
    "scripts": {
        "compile": "tsc -b",
        "build": "vsce package"
    }
}
