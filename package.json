{
    "name": "vscode-ydsh",
    "displayName": "vscode-ydsh",
    "description": "vscode extension for ydsh",
    "version": "0.1.3",
    "license": "Apache-2.0",
    "homepage": "https://github.com/sekiguchi-nagisa/vscode-ydsh/blob/master/README.md",
    "engines": {
        "vscode": "^1.52.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "publisher": "nagisa-sekiguchi",
    "repository": {
        "type": "git",
        "url": "https://github.com/sekiguchi-nagisa/vscode-ydsh.git"
    },
    "main": "./out/extension.js",
    "activationEvents": [
        "onLanguage:ydsh"
    ],
    "contributes": {
        "languages": [
            {
                "id": "ydsh",
                "aliases": [
                    "ydsh",
                    "ds"
                ],
                "extensions": [
                    "ds"
                ],
                "firstLine": "^#!/usr/bin/env +ydsh\\b",
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "ydsh",
                "scopeName": "source.ydsh",
                "path": "./syntaxes/ydsh.tmLanguage.json"
            }
        ],
        "configuration": {
            "title": "ydshd",
            "properties": {
                "analyzer.executablePath": {
                    "type": "string",
                    "default": "ydshd",
                    "description": "executable path of ydshd. default is ydshd"
                },
                "analyzer.logLevel": {
                    "type": "string",
                    "default": "info",
                    "enum": [
                        "debug",
                        "info",
                        "warning",
                        "error",
                        "fatal"
                    ],
                    "description": "analyzer log level setting"
                }
            }
        }
    },
    "devDependencies": {
        "@types/mocha": "^8.2.2",
        "@types/node": "^12.20.37",
        "@types/vscode": "^1.62.0",
        "@typescript-eslint/eslint-plugin": "^4.33.0",
        "@typescript-eslint/parser": "^4.33.0",
        "eslint": "^7.23.0",
        "mocha": "^8.3.2",
        "typescript": "^4.5.2",
        "vsce": "^1.103.1",
        "vscode-test": "^1.3.0"
    },
    "dependencies": {
        "vscode-languageclient": "^7.0.0"
    },
    "private": true,
    "scripts": {
        "compile": "tsc -b",
        "build": "vsce package"
    }
}
