{
    "name": "vscode-arsh",
    "displayName": "vscode-arsh",
    "description": "vscode extension for arsh",
    "version": "0.23.6",
    "license": "Apache-2.0",
    "homepage": "https://github.com/sekiguchi-nagisa/vscode-arsh/blob/master/README.md",
    "engines": {
        "vscode": "^1.75.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "publisher": "nagisa-sekiguchi",
    "repository": {
        "type": "git",
        "url": "https://github.com/sekiguchi-nagisa/vscode-arsh.git"
    },
    "main": "./out/extension.js",
    "activationEvents": [],
    "contributes": {
        "languages": [
            {
                "id": "arsh",
                "aliases": [
                    "arsh",
                    "ds"
                ],
                "extensions": [
                    "ds",
                    "arsh"
                ],
                "firstLine": "^#!/usr/bin/env +(arsh|ydsh)\\b",
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "arsh",
                "scopeName": "source.arsh",
                "path": "./syntaxes/arsh.tmLanguage.json"
            }
        ],
        "semanticTokenTypes": [
            {
                "id": "commandArgument",
                "description": "command argument",
                "superType": "parameter"
            }
        ],
        "semanticTokenScopes": [
            {
                "language": "arsh",
                "scopes": {
                    "variable": [
                        "variable.other.arsh"
                    ],
                    "commandArgument": [
                        "constant.other"
                    ]
                }
            }
        ],
        "configuration": {
            "title": "arshd",
            "properties": {
                "arshd.executablePath": {
                    "type": "string",
                    "default": "arshd",
                    "description": "executable path of arshd. default is arshd"
                },
                "arshd.logLevel": {
                    "type": "string",
                    "default": "warning",
                    "enum": [
                        "debug",
                        "info",
                        "warning",
                        "error",
                        "fatal"
                    ],
                    "description": "analyzer log level setting"
                },
                "arshd.fileNameCompletion": {
                    "type": "string",
                    "default": "disabled",
                    "enum": [
                        "enabled",
                        "disabled"
                    ],
                    "description": "enable filename completion (also complete external commands)"
                },
                "arshd.semanticHighlight": {
                    "type": "string",
                    "default": "enabled",
                    "enum": [
                        "enabled",
                        "disabled"
                    ],
                    "description": "enable semantic highlight (server side syntax highlight)"
                },
                "arshd.rename": {
                    "type": "string",
                    "default": "enabled",
                    "enum": [
                        "enabled",
                        "disabled"
                    ],
                    "description": "enable rename"
                }
            }
        },
        "configurationDefaults": {
            "[arsh]": {
                "editor.semanticHighlighting.enabled": true
            }
        },
        "commands": [
            {
                "title": "restart language server",
                "category": "arshd",
                "command": "arshd.restart"
            }
        ]
    },
    "devDependencies": {
        "@types/mocha": "^10.0.10",
        "@types/node": "^22.13.16",
        "@types/vscode": "^1.75.0",
        "@vscode/test-electron": "^2.3.10",
        "@vscode/vsce": "^3.3.2",
        "eslint": "^9.3.0",
        "mocha": "^11.3.0",
        "typescript": "^5.3.3"
    },
    "dependencies": {
        "vscode-languageclient": "^9.0.0"
    },
    "private": true,
    "scripts": {
        "compile": "tsc -b",
        "build": "vsce package"
    }
}
