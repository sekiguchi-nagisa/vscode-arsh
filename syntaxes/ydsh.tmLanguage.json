{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "ydsh",
    "patterns": [
        {
            "include": "#keywords"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#comment"
        },
        {
            "include": "#variables"
        },
        {
            "include": "#constants"
        },
        {
            "include": "#storages"
        },
        {
            "include": "#supports"
        }
    ],
    "repository": {
        "comment": {
            "patterns": [
                {
                    "begin": "#",
                    "beginCaptures": {
                        "0": {
                            "name": "punctuation.definition.comment.ydsh"
                        }
                    },
                    "end": "$",
                    "name": "comment.line.number-sign.ydsh"
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.ydsh",
                    "match": "\\b(assert|break|case|catch|continue|coproc|do|else|elif|finally|for|if|return|try|throw|while|defer|time)\\b"
                },
                {
                    "name": "keyword.operator.ydsh",
                    "match": "\\b(as|is|with|and|or|xor)\\b"
                },
                {
                    "name": "keyword.other.ydsh",
                    "match": "\\b(in|new|inlined|typeof)\\b"
                }
            ]
        },
        "storages": {
            "patterns": [
                {
                    "name": "storage.type.ydsh",
                    "match": "\\b(var|let|const|import-env|importenv|export-env|exportenv|function|source!|source|alias|typedef)\\b"
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "name": "string.quoted.double.ydsh",
                    "begin": "\"",
                    "end": "\"",
                    "patterns": [
                        {
                            "name": "constant.character.escape.ydsh",
                            "match": "\\\\."
                        }
                    ]
                },
                {
                    "name": "string.quoted.single.ydsh",
                    "begin": "'",
                    "end": "'"
                },
                {
                    "name": "string.quoted.other.ydsh",
                    "begin": "\\$'",
                    "patterns": [
                        {
                            "match": "(\\\\'|[^'])*"
                        }
                    ],
                    "end": "'"
                },
                {
                    "name": "string.regexp.ydsh",
                    "match": "\\$/(\\\\/|[^/])*/[ims]{0,3}"
                }
            ]
        },
        "variables": {
            "patterns": [
                {
                    "name": "variable.other.ydsh",
                    "match": "\\$\\w+"
                },
                {
                    "name": "variable.other.ydsh",
                    "match": "\\${\\w+}"
                },
                {
                    "name": "variable.other.ydsh",
                    "match": "\\$(#|\\?|@|\\$|[0-9])"
                },
                {
                    "name": "variable.other.ydsh",
                    "match": "\\${(#|\\?|@|\\$|[0-9])}"
                }
            ]
        },
        "constants": {
            "patterns": [
                {
                    "name": "constant.numeric.ydsh",
                    "match": "\\b((0|[1-9][0-9]*)(\\.[0-9]+([eE](\\+|-)?[0-9]+)?)?)\\b"
                },
                {
                    "name": "constant.numeric.ydsh",
                    "match": "\\b(0[oO]?[0-7]+)\\b"
                },
                {
                    "name": "constant.numeric.ydsh",
                    "match": "\\b(0[xX]?[0-9a-fA-F]+)\\b"
                }
            ]
        },
        "supports": {
            "patterns": [
                {
                    "name": "support.function.ydsh",
                    "match": "\\b(:|__gets|__puts|_exit|bg|cd|checkenv|command|complete|dirs|disown|echo|eval|exec|exit|false|fg)\\b"
                },
                {
                    "name": "support.function.ydsh",
                    "match": "\\b(hash|help|jobs|kill|popd|pushd|pwd|read|setenv|shctl|test|true|ulimit|umask|unsetenv|wait)\\b"
                }
            ]
        }
    },
    "scopeName": "source.ydsh"
}